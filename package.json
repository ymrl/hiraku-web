    "test": "pnpm --filter=@hiraku-web/* test",
    "install-playwright": "playwright install chromium firefox",
    "bump_version:packages": "pnpm --filter @hiraku-web/* --no-git-tag-version bump_version",
    "bump_version": "pnpm version --no-git-tag-version"
